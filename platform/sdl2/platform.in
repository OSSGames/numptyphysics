# Platform build definition for SDL2
# Will be processed by makefile

add_platform(freedesktop)
add_platform(gl)

add_pkgconfig(sdl2)
add_pkgconfig(SDL2_image)
add_pkgconfig(SDL2_ttf)
add_pkgconfig(gio-2.0)

# OpenGL library
ifeq ($(shell uname),Darwin)
LIBS += -framework OpenGL
else
add_pkgconfig(gl)
endif
